<h2 class="heading--sm text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input mb-16">
    <%= f.label :email, class:"content--xs overline" %>
    <div class="input__container">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@mail.com", class: "input__content" %>
    </div>
  </div>

  <div class="input mb-16">
    <%= f.label :password, class:"content--xs overline" %>
    <div class="input__container">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "********", class: "input__content" %>
    </div>
  </div>

  <%= f.submit "Log in", class: "btn btn--primary" %>
<% end %>

<%= link_to "Sign up", new_registration_path(resource_name), class: "primary-500 text-center" %>
