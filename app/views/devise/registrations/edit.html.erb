<h2 class="heading--sm text-center">Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input mb-16">
    <%= f.label :email, class:"content--xs overline" %>
    <div class="input__container">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input__content" %>
    </div>
  </div>

  <div class="input mb-16">
    <%= f.label :username, class:"content--xs overline" %>
    <div class="input__container">
      <%= f.text_field :username, class: "input__content" %>
    </div>
  </div>

  <div class="input mb-16">
    <%= f.label :name, class:"content--xs overline" %>
    <div class="input__container">
      <%= f.text_field :name, class: "input__content" %>
    </div>
  </div>

  <div class="input mb-16">
    <%= f.label :avatar, class:"content--xs overline" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="input mb-16">
    <%= f.label :password, class:"content--xs overline" %> <i>(leave blank if you don't want to change it)</i>
    <div class="input__container">
      <%= f.password_field :password, autocomplete: "new-password", class: "input__content" %>
    </div>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="input mb-16">
    <%= f.label :password_confirmation, class:"content--xs overline" %>
    <div class="input__container">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input__content" %>
    </div>
  </div>

  <div class="input mb-16">
    <%= f.label :current_password, class:"content--xs overline" %> <i>(we need your current password to confirm your changes)</i>
    <div class="input__container">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input__content" %>
    </div>
  </div>

  <%= f.submit "Update", class: "btn btn--primary" %>
<% end %>

<%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "primary-500 text-center" %>
